<?xml version="1.0" encoding="utf-8"?>
<com.coolpad.www.todaynews.view.item.BigVideoItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_10">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/image_padding"
        android:textColor="@android:color/black"
        android:textSize="@dimen/title_text_size" />

    <FrameLayout
        android:id="@+id/video_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:gravity="center">

        <ImageView
            android:id="@+id/one_video_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@mipmap/search" />

        <TextView
            android:id="@+id/video_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:background="@drawable/image_text_view_background"
            android:paddingEnd="@dimen/dp_10"
            android:paddingStart="@dimen/dp_10"
            android:textColor="@android:color/white"
            android:textSize="@dimen/video_duration_text_size" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/video_layout"
        android:layout_marginTop="@dimen/image_padding"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/label_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/dp_10"
            android:paddingStart="0dp"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/label_text_size" />

        <TextView
            android:id="@+id/label_comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/dp_10"
            android:paddingStart="0dp"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/label_text_size" />

        <TextView
            android:id="@+id/label_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="0dp"
            android:paddingStart="0dp"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/label_text_size" />

    </LinearLayout>

</com.coolpad.www.todaynews.view.item.BigVideoItemView>